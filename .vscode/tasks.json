{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean",
            "type": "shell",
            "detail": "Cleans generated build files",
            "group": "build",
            "icon": {
                "id": "trash",
                "color": "terminal.ansiRed"
            },
            "command": "ninja",
            "args": [
                "clean"
            ],
            "options": {
                "cwd": "${workspaceFolder}/build_${input:version}"
            },
            "presentation": {
                "echo": true,
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false,
                "close": true
            }
        },
        {
            "label": "Build",
            "type": "shell",
            "detail": "Builds TPGZ.",
            "group": "build",
            "icon": {
                "id": "gear",
                "color": "terminal.ansiGreen"
            },
            "command": "ninja",
            "args": [],
            "runOptions": {
                "instanceLimit": 1
            },
            "options": {
                "cwd": "${workspaceFolder}/build_${input:version}"
            },
            "presentation": {
                "echo": true,
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Generate ISO",
            "type": "shell",
            "detail": "Patches the game's iso",
            "group": "build",
            "icon": {
                "id": "server",
                "color": "terminal.ansiYellow"
            },
            "command": "ninja",
            "args": [
                "iso"
            ],
            "dependsOn": [
                "Build"
            ],
            "dependsOrder": "sequence",
            "runOptions": {
                "instanceLimit": 1
            },
            "options": {
                "cwd": "${workspaceFolder}/build_${input:version}"
            },
            "presentation": {
                "echo": true,
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        },
        {
            "label": "Generate Patch",
            "type": "shell",
            "detail": "Patches the game's iso",
            "group": "build",
            "icon": {
                "id": "server",
                "color": "terminal.ansiYellow"
            },
            "command": "ninja",
            "args": [
                "patch"
            ],
            "dependsOn": [
                "Clean",
                "Build GC US"
            ],
            "dependsOrder": "sequence",
            "runOptions": {
                "instanceLimit": 1
            },
            "options": {
                "cwd": "${workspaceFolder}/build_${input:version}"
            },
            "presentation": {
                "echo": true,
                "revealProblems": "onProblem",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            }
        }
    ],
    "inputs": [
        {
            "id": "version",
            "type": "pickString",
            "description": "The platform to build for",
            "options": [
                "gc_us",
                "gc_pal",
                "gc_jp",
                "wii_us10",
                "wii_us12",
                "wii_pal"
            ],
            "default": "GCN_NTSCU"
        }
    ]
}